# Samurai Bot Configuration
# Copy this file to .env and fill in your values

# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_OWNER=123456789
BOT_LOCALE=ru

# Group IDs (comma-separated for multiple groups)
GROUPS_MAIN=-1001234567890,-1001234567891
GROUPS_REPORTS=-1001234567892
GROUPS_LOGS=-1001234567893
LINKED_CHANNELS=-1001234567894,-1001234567895

# Database URL (SQLite default)
DB_URL=sqlite+aiosqlite:///db.sqlite

# MySQL example:
# DB_URL=mysql+aiomysql://user:password@localhost/samurai

# Health check port (default: 8080)
# HEALTHCHECK_PORT=8080
